<div class="text-center">
  <h2>{{title}}</h2>
  <p>Created by {{account.name}} on {{format_date date_created}}</p>
  <p>{{contents}}</p>

  <form class="form new-comment-form"></form>
    <div class="form-group">
        <label for="comment-contents">Contents:</label>
        <textarea class="form-input" id="comment-contents" name="comment-contents"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
    </div>
  </form>

  {{#if comments.length}}
    <div class="col-md-6 project-list">
      <h3>Comments:</h3>

      {{#each comments as |comment|}}
        <div class="row mb-2">
        <div class="col-md-8">
            <p>Created by {{account.name}} on {{format_date date_created}}</p>
            <p>{{comment.contents}}</p>
        </div>
        <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{project.id}}">Delete</button>
        </div>
        </div>
    {{/each}}
  </div>
  {{/if}}
</div>
