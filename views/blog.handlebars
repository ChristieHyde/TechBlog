<div class="text-center">
  <h2>{{title}}</h2>
  <p>Created by {{account.name}} on {{format_date date_created}}</p>
  <p>{{contents}}</p>


  <form class="form new-comment-form">
    <div class="form-group">
        <label for="comment-contents">Leave a Comment</label>
        <textarea class="form-input" id="comment-contents" name="comment-contents"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
    </div>
  </form>

  <div class="col-md-6 comment-list">
    {{#if comments.length}}

      <h3>Comments:</h3>

      {{#each comments as |comment|}}
        <div class="row mb-2">
        <div class="col-md-8">
            <p>Created by {{comment.account.name}} on {{format_date comment.date_created}}</p>
            <p>{{comment.contents}}</p>
        </div>
        <!-- Delete button only on comments you authored
        <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">Delete</button>
        </div>
        -->
        </div>
    {{/each}}
  {{/if}}
  </div>
</div>

<script src="../js/blog.js"></script>
